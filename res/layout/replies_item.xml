<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#d7d1d1"
        android:padding="7dp" >

        <TextView
            android:id="@+id/viewthread_1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/viewthread_1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/viewthread_1_1"
            android:layout_alignBottom="@+id/viewthread_1_1"
            android:layout_centerHorizontal="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/viewthread_1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/viewthread_1_2"
            android:layout_alignBottom="@+id/viewthread_1_2"
            android:layout_toLeftOf="@+id/textView1"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/viewthread_1_3"
            android:layout_alignBottom="@+id/viewthread_1_3"
            android:layout_alignParentRight="true"
            android:text="#"
            android:textSize="14sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/viewthread_1_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp" >

        <Button
            android:id="@+id/forum_activity_1_1_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="回复"
            android:textSize="14sp"
            android:textColor="#1544cb" />

        <Button
            android:id="@+id/viewthread_1_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:text="引用"
            android:textColor="#1544cb"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>